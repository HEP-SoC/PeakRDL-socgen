addrmap nmi_memory #(
    longint unsigned ADDR_WIDTH = 32,
    longint unsigned DATA_WIDTH = 32,
    longint unsigned MEM_SIZE   = 4096
    )
    {
    name = "NMI memory";
    desc = "Memory module with NMI (Native Memory Interface) port";
    mem {
        mementries = MEM_SIZE/(DATA_WIDTH/8);
        memwidth   = DATA_WIDTH;

    } external memory;

    clk clk;
    rstn rstn;

};
