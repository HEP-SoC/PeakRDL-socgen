addrmap apb_subsys #(
    apb_intf INTF = apb_intf'{
        ADDR_WIDTH:32,
        DATA_WIDTH:32,
        prefix:"s_",
        modport:Modport::slave,
        cap:false
        }
    ){
    subsystem;

    ifports = '{ INTF };


    apb_slave apb_slave0 @ 0x3000;

    clk clk;
    rstn rstn;
};

