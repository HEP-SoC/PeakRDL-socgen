addrmap apb_slave #(
    apb_intf INTF = apb_intf'{ADDR_WIDTH:32, DATA_WIDTH:32, prefix:"mem_", modport:Modport::slave, cap:false}
    )
    {

    ifports = '{INTF};

    mem {
        mementries = 1;
        memwidth   = INTF.DATA_WIDTH;

    } external memory;

    clk clk;
    rst rst;

    signal {output;} random_sig;

};

