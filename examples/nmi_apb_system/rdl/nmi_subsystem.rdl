addrmap nmi_subsystem #(
    base_bus BUS = base_bus'{name:"nmi_bus", ADDR_WIDTH:32, DATA_WIDTH:32}
){
    name = "NMI subsystem";
    bus_inst = BUS;
    subsystem;

    // Memories
    nmi_memory #(
        .MEM_SIZE(1024),
        .DATA_WIDTH(32),
        .ADDR_WIDTH(32)
        ) submem0;

    nmi_memory #(
        .MEM_SIZE(64000),
        .DATA_WIDTH(32),
        .ADDR_WIDTH(32)
        ) submem1;


        clk clk;
        rstn rstn;

};

